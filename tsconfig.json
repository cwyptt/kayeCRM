{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src/main/resources/static/js",
    "rootDir": "./src/main/resources/typescript",
    "moduleResolution": "node"
  },
  "include": ["src/main/resources/typescript/**/*"],
  "exclude": ["node_modules"]
}